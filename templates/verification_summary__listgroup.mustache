{{!
    @template assignfeedback_verified/verification_summary

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:

    Example context (json):
    {
    }
}}
<div class="list-group list-group-flush">
    <div class="list-group-item flex-column align-items-start">
        <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">
                <div>
                    {{#summarynoverifiers}}<span class="icon fa fa-info-circle fa-fw"></span>{{/summarynoverifiers}}
                    {{#summarypending}}<span class="icon fa fa-info-circle fa-fw"></span>{{/summarypending}}
                    {{#summaryverified}}<span class="icon fa fa-check-circle-o fa-fw"></span>{{/summaryverified}}
                    <span>{{summarytitle}}</span>
                </div>
            </h5>
            <small>-</small>
        </div>
    </div>
    {{#verifications}}
        <div class="list-group-item flex-column align-items-start">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">
                    <div>
                        {{#pending}}<span class="icon fa fa-info-circle fa-fw"></span><span>Pending verification by {{verifierfullname}}</span>{{/pending}}
                        {{#changesrequested}}<span class="icon fa fa-info-circle fa-fw"></span></span>Changes requested by {{verifiedbyfullname}}</span>{{/changesrequested}}
                        {{#verified}}<span class="icon fa fa-check-circle-o fa-fw"></span><span>Verified by {{verifiedbyfullname}}</span>{{/verified}}
                    </div>
                </h5>
<!--                <small>{{title}}</small>-->
            </div>
            <div class="">{{{comment}}}</div>
        </div>
    {{/verifications}}
</div>
